BasedOnStyle: LLVM
AlignConsecutiveAssignments: true
AlignOperands: true
AlwaysBreakAfterReturnType: TopLevel
BreakBeforeBraces: Custom
BraceWrapping:
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterStruct: false
  BeforeElse: true
  SplitEmptyFunction: true
IndentWidth: 4
PointerAlignment: Left
TabWidth: 4
UseTab: Never
